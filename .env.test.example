# ============================================
# TEST ENVIRONMENT CONFIGURATION
# This file is used during test execution
# Copy to .env.test and fill in your values
# ============================================

NODE_ENV=test

# ============================================
# DATABASE CONFIGURATION (REQUIRED FOR TESTS)
# ============================================
# Use a separate test database - NEVER use production!
DATABASE_URL=postgresql://user:password@host:5432/unbuilt_test

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
# Generate secure random strings for testing
JWT_ACCESS_SECRET=your-test-access-secret-min-32-chars
JWT_REFRESH_SECRET=your-test-refresh-secret-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# SECURITY CONFIGURATION
# ============================================
COOKIE_SECRET=your-test-cookie-secret-min-32-chars
CORS_ORIGIN=http://localhost:5000

# Security (relaxed for faster tests)
BCRYPT_ROUNDS=4
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_MINUTES=1

# ============================================
# AI SERVICE CONFIGURATION
# ============================================
# Use test/development API keys - NOT production keys!
GEMINI_API_KEY=your-gemini-test-api-key
XAI_API_KEY=your-xai-test-api-key
PERPLEXITY_API_KEY=your-perplexity-test-api-key

# ============================================
# PAYMENT PROCESSING (STRIPE)
# ============================================
# Use Stripe TEST keys only - sk_test_... and pk_test_...
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret

# ============================================
# EMAIL SERVICE (SENDGRID)
# ============================================
SENDGRID_API_KEY=your-sendgrid-test-api-key

# ============================================
# REDIS CACHE
# ============================================
# Use test Redis instance or local Redis
REDIS_URL=redis://localhost:6379

# ============================================
# RATE LIMITING (RELAXED FOR TESTS)
# ============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# ============================================
# DATABASE CONNECTION POOL
# ============================================
DB_MAX_CONNECTIONS=10

# ============================================
# TEST CONFIGURATION
# ============================================
SUPPRESS_TEST_LOGS=true
TEST_TIMEOUT=10000

# ============================================
# DEMO USER (FOR TESTING)
# ============================================
DEMO_USER_EMAIL=test-demo@example.com
DEMO_USER_PASSWORD=TestDemo@123
